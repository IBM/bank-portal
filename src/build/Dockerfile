FROM docker.io/openliberty/open-liberty:kernel-java8-openj9-ubi

LABEL name="UBI TAT-Bank-Portal" \
      vendor="TAT" \
      version="v0.0.1" \
      release="1" \
      summary="An example banking Portal UI exists purely for educational purposes" \
      description="This is a Service that use to interface with backend service from banking industry"
      
COPY licenses/ /licenses
      
# Add my app and config
COPY --chown=1001:0 ./build/bank-portal-1.0-SNAPSHOT.jar /config/dropins/spring/
COPY --chown=1001:0 ./build/server.xml /config/

# Default setting for the verbose option
ARG VERBOSE=false

# This script will add the requested XML snippets, grow image to be fit-for-purpose and apply interim fixes
RUN configure.sh

